<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <ProgressBar
        android:id="@+id/indeterminateBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="182dp"
        android:layout_marginTop="342dp"
        android:layout_marginEnd="182dp"
        android:layout_marginBottom="342dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/tak_needle_splash"
        android:layout_width="0dp"
        android:layout_height="146dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/indeterminateBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_tak_pushpin"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/green_box_splash"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="@+id/tak_needle_splash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_solid_box" />

    <ImageView
        android:id="@+id/tak_pushpinwhite_splash"
        android:layout_width="138dp"
        android:layout_height="137dp"
        app:layout_constraintBottom_toTopOf="@+id/tak_needle_splash"
        app:layout_constraintEnd_toEndOf="@+id/green_box_splash"
        app:layout_constraintStart_toStartOf="@+id/green_box_splash"
        app:layout_constraintTop_toTopOf="@+id/green_box_splash"
        app:srcCompat="@drawable/ic_tak_pushpinbox" />

</androidx.constraintlayout.widget.ConstraintLayout>