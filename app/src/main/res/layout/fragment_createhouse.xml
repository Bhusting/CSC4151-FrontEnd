<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CreateJoinHouseLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/takWhite">

    <TextView
        android:id="@+id/houseNamePromptSlug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please name your house."
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/create_guideline_20perh"
        app:layout_constraintEnd_toStartOf="@+id/create_guideline_50per"
        app:layout_constraintStart_toStartOf="@+id/create_guideline_50per"
        app:layout_constraintTop_toTopOf="@+id/create_guideline_20perh" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/create_guideline_20perh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/create_guideline_5per"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/create_guideline_50per"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/create_guideline_50perh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/create_guideline_85perh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <EditText
        android:id="@+id/editTextCreateHouse"
        android:layout_width="350dp"
        android:layout_height="56dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/create_guideline_50perh"
        app:layout_constraintEnd_toStartOf="@+id/create_guideline_50per"
        app:layout_constraintStart_toStartOf="@+id/create_guideline_50per"
        app:layout_constraintTop_toTopOf="@+id/create_guideline_50perh" />

    <Button
        android:id="@+id/acceptCreateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Confirm Name"
        app:layout_constraintEnd_toStartOf="@+id/create_guideline_50per"
        app:layout_constraintStart_toStartOf="@+id/create_guideline_50per"
        app:layout_constraintTop_toBottomOf="@+id/editTextCreateHouse" />

    <TextView
        android:id="@+id/createInfoSlug"
        android:layout_width="342dp"
        android:layout_height="71dp"
        android:layout_marginTop="8dp"
        android:text="You can change your house name at any time in the profile page. \nAdditionally, a code will be provided in the profile page that others can use to join your house."
        app:layout_constraintTop_toBottomOf="@+id/acceptCreateButton"
        app:layout_constraintEnd_toStartOf="@+id/create_guideline_50per"
        app:layout_constraintStart_toStartOf="@+id/create_guideline_50per"
        tools:layout_editor_absoluteX="39dp" />

    <TextView
        android:id="@+id/leaveCreateSlug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Want to join a house instead?"
        app:layout_constraintBottom_toTopOf="@+id/create_guideline_85perh"
        app:layout_constraintStart_toStartOf="@+id/create_guideline_5per"
        app:layout_constraintTop_toTopOf="@+id/create_guideline_85perh" />

    <Button
        android:id="@+id/backCreateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        app:layout_constraintStart_toStartOf="@+id/create_guideline_5per"
        app:layout_constraintTop_toBottomOf="@+id/leaveCreateSlug" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name Must Not Contain Special Characters"
        android:textColor="#FF0000"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="314dp" />

</androidx.constraintlayout.widget.ConstraintLayout>


